.gallery-section
  &__inner
    padding: 48px 0
    +above($breakpoints.md)
      padding: 86px 0
    +above($breakpoints.xxl)
      padding: 130px 0 120px 0
  &__title
    margin: 0 0 24px 0
    +above($breakpoints.xxl)
      margin: 0 0 38px 0
  &__swiper
    max-width: 270px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 460px
    +above($breakpoints.md)
      max-width: 560px
    +above($breakpoints.xxl)
      max-width: 1116px
  &__swiper-slide
    border-radius: 15px
    overflow: hidden
  &__swiper-control
    position: absolute
    width: 100%
    height: 0
    top: 0
    bottom: 0
    left: 0
    right 0
    margin: auto
    display: flex
    justify-content: space-between
    align-items: center
    z-index 1
    .gallery-control
      cursor pointer
      svg
        width 30px
        height: 30px
        +above($breakpoints.sm)
          width 38px
          height: 38px
        +above($breakpoints.md)
          width 48px
          height: 48px
      &.swiper-button-disabled
        svg
          opacity 0.6
          color: #767676
          cursor: no-drop
  &__swiper-slide
    img
      width: 100%
      height: auto

  &__swiper-prev
    margin: 0 0 0 -15px
    +above($breakpoints.sm)
      margin: 0 0 0 -19px
    +above($breakpoints.md)
      margin: 0 0 0 -24px
  &__swiper-next
    margin: 0 -15px 0 0
    +above($breakpoints.sm)
      margin: 0 -19px 0 0
    +above($breakpoints.md)
      margin: 0 -24px 0 0